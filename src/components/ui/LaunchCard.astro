---
import StatusBadge from './StatusBadge.astro';

interface Props {
  id: string;
  flightNumber: number;
  details: string | null;
  img: string;
  success: boolean;
}

const { id, flightNumber, details, img, success } = Astro.props;
---

<a 
  href={`/launch/${id}`}
  class="flex flex-col rounded-lg shadow-md transition hover:scale-105
  bg-gray-800 hover:bg-gray-700 border-gray-700 hover:border-gray-500"
>
  <!-- Logo -->
  <picture class="flex justify-center p-4">
    <img 
      class="rounded-lg mb-5"
      src={img}
      alt={`Patch for launch ${id}`}
    />
  </picture>
  <!-- Contenido -->
  <header class="flex-grow p-4">
    <div class="flex justify-between items-center">
      <!-- NÃºmero de lanzamiento -->
      <h2 class="text-2xl text-white font-bold tracking-tight my-2">
        Flight #{flightNumber}
      </h2>
      <!-- Estado -->
      <StatusBadge success={success} />
    </div>
    <!-- Detalles -->
    <p class="text-gray-400 font-light mb-4">
      {details != null && details?.length > 100 
        ? details.slice(0, 100) + "..."
        : "Launch details are not available right now."
      }
    </p>
  </header>
</a>